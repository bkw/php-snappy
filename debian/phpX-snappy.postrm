#! /bin/sh
set -e

if test "$1" = "purge"; then
    if which ucf >/dev/null 2>&1; then
        ucf --purge /etc/phpX/conf.d/snappy.ini
    fi
    rm -f /etc/phpX/conf.d/snappy.ini
fi

if test "$1" = "remove"; then
    sed s/extension/\;extension/g -i /etc/phpX/conf.d/snappy.ini
fi

#DEBHELPER#

exit 0
